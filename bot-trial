#!/bin/bash

# =================================================================================
# Skrip Akun Trial SSH & OVPN (Non-Interaktif)
# Disesuaikan untuk Bot Telegram oleh AI.
# Durasi trial ditetapkan secara permanen.
# =================================================================================

# --- Konfigurasi Trial ---
# Durasi trial dalam menit. Akun akan dihapus setelah waktu ini.
TRIAL_DURATION_MINUTES="30"
# Masa berlaku fallback di sistem (jika 'at' gagal), dalam hari.
FALLBACK_EXPIRY_DAYS="1"


# --- Pengaturan Variabel ---
IP=$(curl -sS ipv4.icanhazip.com)
domain=$(cat /etc/xray/domain)
Login=Trial-`head /dev/urandom | tr -dc A-Z0-9 | head -c4`
Pass="1234"

# --- Proses Pembuatan User ---
# Menambahkan user dengan tanggal kadaluarsa fallback
useradd -e `date -d "$FALLBACK_EXPIRY_DAYS days" +"%Y-%m-%d"` -s /bin/false -M $Login

# Mengatur password user
echo -e "$Pass\n$Pass\n" | passwd $Login &> /dev/null

# Jadwalkan penghapusan user menggunakan 'at'
echo "userdel -f -r $Login" | at now + $TRIAL_DURATION_MINUTES minutes > /dev/null 2>&1

# --- Membuat File Detail Akun untuk Web Download (Opsional) ---
tgl_buat=$(date)
tgl_hapus=$(date -d "+$TRIAL_DURATION_MINUTES minutes")
cat > "/var/www/html/ssh-$Login.txt" <<-END
---------------------------------------------------
       Hokage Legend - Akun Trial SSH & OVPN
---------------------------------------------------
Username         : $Login
Password         : $Pass
---------------------------------------------------
IP Address       : $IP
Host             : $domain
---------------------------------------------------
Port OpenSSH     : 22, 80, 443
Port Dropbear    : 109, 143, 443
Port SSL/TLS     : 443
Port SSH WS      : 80, 8080, 8880, 2086, 2095
Port SSH SSL WS  : 443
Port OVPN TCP    : 1194, 443
Port OVPN UDP    : 2200
BadVPN UDP       : 7100, 7200, 7300
---------------------------------------------------
Dibuat Pada      : $tgl_buat
Akan Dihapus Pada: $tgl_hapus
---------------------------------------------------
Link Download OVPN:
https://$domain:81/
---------------------------------------------------
END


# --- Cetak Output untuk Bot Telegram ---
# Output ini akan ditangkap oleh skrip Python.

echo "âœ… Akun Trial SSH & OVPN Berhasil Dibuat"
echo "==================================="
echo "Informasi Akun Trial"
echo "-----------------------------------"
echo "Host          : $domain"
echo "Username      : $Login"
echo "Password      : $Pass"
echo "Masa Aktif    : $TRIAL_DURATION_MINUTES Menit"
echo "-----------------------------------"
echo "Konfigurasi Port"
echo "-----------------------------------"
echo "OpenSSH       : 22, 80, 443"
echo "Dropbear      : 109, 143, 443"
echo "SSL/TLS       : 443"
echo "WS & WSS/SSL  : 80, 443"
echo "OVPN TCP/UDP  : 1194, 2200, 443"
echo "BadVPN        : 7100, 7200, 7300"
echo "==================================="
echo "Akun akan dihapus secara otomatis."
echo "Detail Lengkap: https://$domain:81/ssh-$Login.txt"

exit 0
