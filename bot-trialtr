#!/bin/bash

# Skrip ini membuat akun Trojan trial secara non-interaktif.
# Semua parameter (username, masa aktif, kuota, limit IP) diatur di dalam skrip.

# --- Definisi Warna (Dari skrip asli Anda) ---
Green="\e[92;1m"
RED="\033[31m"
YELLOW="\033[33m"
BLUE="\033[36m"
FONT="\033[0m"
GREENBG="\033[42;37m"
REDBG="\033[41;37m"
OK="${Green}--->${FONT}"
ERROR="${RED}[ERROR]${FONT}"
GRAY="\e[1;30m"
NC='\e[0m'
red='\e[1;31m'
green='\e[0;32m'
DF='\e[39m'
Bold='\e[1m'
Blink='\e[5m'
yell='\e[33m'
red='\e[31m'
green='\e[32m'
blue='\e[34m'
PURPLE='\e[35m'
cyan='\e[36m'
Lred='\e[91m'
Lgreen='\e[92m'
Lyellow='\e[93m'
NC='\e[0m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
LIGHT='\033[0;37m'
grenbo="\e[92;1m"
red() { echo -e "\\033[32;1m${*}\\033[0m"; }

# --- Pengambilan Info Server (Dari skrip asli Anda) ---
ISP=$(cat /etc/xray/isp 2>/dev/null || curl -s ipinfo.io/org | cut -d ' ' -f 2-10 || echo "Unknown ISP")
CITY=$(cat /etc/xray/city 2>/dev/null || curl -s ipinfo.io/city || echo "Unknown City")

# Mendapatkan Domain/IP
source /var/lib/kyt/ipvps.conf 2>/dev/null || true
if [[ -z "$IP" ]]; then
    domain=$(cat /etc/xray/domain 2>/dev/null || curl -sS ipv4.icanhazip.com)
else
    domain=$IP
fi

# --- Parameter Trial (Diatur di dalam skrip) ---
masaaktif=1
Quota=1
iplimit=10
# Generate username unik
user=Trial-TR`cat /dev/urandom | tr -dc '0-9' | head -c3`

# --- Logika Pembuatan Akun Trojan (Diadaptasi dari skrip asli Anda) ---

# Cek apakah username sudah ada (penting untuk trial juga)
CLIENT_EXISTS=$(grep -w $user /etc/xray/config.json | wc -l)
if [[ ${CLIENT_EXISTS} == '1' ]]; then
    # Jika username sudah ada (sangat jarang untuk trial acak), coba lagi atau beri error
    echo "Error: Username Trial-TR${user} sudah ada. Mohon coba lagi."
    exit 1
fi

uuid=$(cat /proc/sys/kernel/random/uuid)
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")
tgl=$(date -d "$masaaktif days" +"%d")
bln=$(date -d "$masaaktif days" +"%b")
thn=$(date -d "$masaaktif days" +"%Y")
expe="$tgl $bln, $thn"
tgl2=$(date +"%d")
bln2=$(date +"%b")
thn2=$(date +"%Y")
tnggl="$tgl2 $bln2, $thn2"

# Tambahkan konfigurasi ke Xray
sed -i '/#trojanws$/a\#! '"$user $exp"'\
},{"password": "'""$uuid""'","email": "'""$user""'"' /etc/xray/config.json
sed -i '/#trojangrpc$/a\#! '"$user $exp"'\
},{"password": "'""$uuid""'","email": "'""$user""'"' /etc/xray/config.json

# Link Trojan Akun
systemctl restart xray > /dev/null 2>&1 # Restart Xray, alihkan output ke /dev/null
service cron restart > /dev/null 2>&1 # Restart cron, alihkan output ke /dev/null

trojanlink="trojan://${uuid}@${domain}:443?path=%2Ftrojan-ws&security=tls&host=${domain}&type=ws&sni=${domain}#${user}"
# Asumsi bugkamu.com adalah domain yang di-hardcode di skrip asli Anda
# trojanlink="trojan://${uuid}@bugkamu.com:443?path=%2Ftrojan-ws&security=tls&host=${domain}&type=ws&sni=${domain}#${user}"
trojanlink1="trojan://${uuid}@${domain}:443?mode=gun&security=tls&type=grpc&serviceName=trojan-grpc&sni=${domain}#${user}"
trojanlink2="trojan://${uuid}@${domain}:80?path=%2Ftrojan-ws&security=none&host=${domain}&type=ws#${user}"

# Buat file detail akun di public_html
mkdir -p /var/www/html/ # Pastikan direktori ini ada dan dapat ditulis
cat >/var/www/html/trojan-$user.txt <<-END
---------------------------------------------------
 https://github.com/jaka1m/project
---------------------------------------------------
# Format Trojan GO/WS

- name: Trojan-$user-GO/WS
  server: ${domain}
  port: 443
  type: trojan
  password: ${uuid}
  network: ws
  sni: ${domain}
  skip-cert-verify: true
  udp: true
  ws-opts:
    path: /trojan-ws
    headers:
        Host: ${domain}

# Format Trojan gRPC

- name: Trojan-$user-gRPC
  type: trojan
  server: ${domain}
  port: 443
  password: ${uuid}
  udp: true
  sni: ${domain}
  skip-cert-verify: true
  network: grpc
  grpc-opts:
    grpc-service-name: trojan-grpc

---------------------------------------------------
Link Akun Trojan
---------------------------------------------------
Link WS          :
${trojanlink}
---------------------------------------------------
Link GRPC        :
${trojanlink1}
---------------------------------------------------

END

if [ ! -e /etc/trojan ]; then
  mkdir -p /etc/trojan
fi

if [[ $iplimit -gt 0 ]]; then
    mkdir -p /etc/fvstore/limit/trojan/ip # Pastikan direktori ini ada
    echo -e "$iplimit" > /etc/fvstore/limit/trojan/ip/$user
fi

if [ -z "${Quota}" ]; then
  Quota="0"
fi

c=$(echo "${Quota}" | sed 's/[^0-9]*//g')
d=$((${c} * 1024 * 1024 * 1024))

if [[ ${c} != "0" ]]; then
  echo "${d}" >/etc/trojan/${user}
fi

# Update database trojan
DATADB=$(cat /etc/trojan/.trojan.db 2>/dev/null | grep "^###" | grep -w "${user}" | awk '{print $2}')
if [[ "${DATADB}" != '' ]]; then
  sed -i "/\b${user}\b/d" /etc/trojan/.trojan.db
fi
echo "### ${user} ${exp} ${uuid} ${Quota} ${iplimit}" >>/etc/trojan/.trojan.db

# Bangun variabel TEXT untuk pesan Telegram (Ini yang akan dicetak ke stdout)
TEXT="<code>---------------------------------------------------</code>
<code>      XRAY/TROJAN TRIAL Account Info</code>
<code>---------------------------------------------------</code>
<code>Remarks   : ${user}
Host/IP   : ${domain}
User Quota : ${Quota} GB
User IP   : ${iplimit} IP
Location  : ${CITY}
ISP       : ${ISP}
Port TLS  : 443
Port NTLS : 80, 8880, 8080
Key       : ${uuid}
Path      : /trojan-ws
ServiceName      : trojan-grpc</code>
<code>---------------------------------------------------</code>
<code> Link WS</code>
<code>---------------------------------------------------</code>
<code>${trojanlink}</code>
<code>---------------------------------------------------</code>
<code> Link None Ws</code>
<code>---------------------------------------------------</code>
<code>${trojanlink2}</code>
<code>---------------------------------------------------</code>
<code> Link GRPC</code>
<code>---------------------------------------------------</code>
<code>${trojanlink1}</code>
<code>---------------------------------------------------</code>
Format OpenClash : https://${domain}:81/trojan-$user.txt
<code>---------------------------------------------------</code>
Aktif Selama   : ${masaaktif} Hari
Dibuat Pada    : ${tnggl}
Berakhir Pada  : ${expe}
<code>---------------------------------------------------</code>
"
# Tidak perlu curl -s --max-time $TIMES -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL
# Karena bot Python akan mengirim pesan ini.

# Cetak TEXT ke standard output agar bot Python bisa menangkapnya
echo "$TEXT"
