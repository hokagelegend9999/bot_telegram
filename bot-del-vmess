#!/bin/bash

# Skrip aman untuk menghapus user VMess menggunakan jq

if [ -z "$1" ]; then
    echo "Error: Username tidak diberikan."
    exit 1
fi

user="$1"
DB_FILE="/etc/vmess/.vmess.db"
CONFIG_FILE="/etc/xray/config.json"

# Cek apakah user ada di database teks
if ! grep -q -w "$user" "$DB_FILE"; then
    echo "❌ Gagal: User '$user' tidak ditemukan di database."
    exit 1
fi

# Ambil UUID user yang akan dihapus
uuid_to_delete=$(grep -w "$user" "$DB_FILE" | awk '{print $3}')

if [ -z "$uuid_to_delete" ]; then
    echo "❌ Gagal: Tidak dapat menemukan UUID untuk user '$user'."
    exit 1
fi

# Hapus user dari config.json menggunakan jq
# Ini akan menghapus entri klien yang memiliki 'id' yang cocok di semua inbound VMess
jq '(.inbounds[]? | select(.protocol=="vmess").settings.clients) |= map(select(.id != "'$uuid_to_delete'"))' "$CONFIG_FILE" > "${CONFIG_FILE}.tmp"

# Timpa file config lama dengan yang baru jika jq berhasil
if [ $? -eq 0 ]; then
    mv "${CONFIG_FILE}.tmp" "$CONFIG_FILE"
else
    echo "❌ Gagal memproses config.json dengan jq."
    rm -f "${CONFIG_FILE}.tmp"
    exit 1
fi

# Hapus dari database teks .vmess.db
sed -i "/\b$user\b/d" "$DB_FILE"

# Hapus file limit (jika ada)
if [ -f "/etc/vmess/$user" ]; then
    rm -f "/etc/vmess/$user"
fi

# Restart Xray menggunakan skrip perantara
systemctl restart xray

echo "✅ User VMess '$user' berhasil dihapus."

exit 0
