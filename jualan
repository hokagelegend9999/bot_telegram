async def view_transactions_user_handler(update: Update, context: ContextTypes.DEFAULT_TYPE) -> None:
    """Menampilkan riwayat transaksi pengguna"""
    user_id = update.effective_user.id
    transactions = get_user_transactions(user_id)
    
    if not transactions:
        await update.message.reply_text("ğŸ“œ Anda belum memiliki riwayat transaksi.", reply_markup=get_main_menu_keyboard())
        return
    
    message = "ğŸ“œ <b>Riwayat Transaksi Terakhir Anda</b>\n\n"
    for tx in transactions:
        message += (
            f"ğŸ“ Tipe: {tx['type']}\n"
            f"ğŸ’° Jumlah: Rp {tx['amount']:,.0f}\n"
            f"â±ï¸ Waktu: {tx['timestamp']}\n"
            f"ğŸ“‹ Deskripsi: {tx.get('description', '-')}\n"
            f"â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n"
        )
    
    await update.message.reply_text(message, parse_mode='HTML', reply_markup=get_main_menu_keyboard())

